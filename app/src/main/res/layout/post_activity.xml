<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#00bf20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Idea"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingRight="15dp"
                android:textSize="40sp"
                android:id="@+id/toolbar_title"/>

        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:paddingTop="5dp"
            android:id="@+id/post_idea_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What's the title of your idea?"/>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:paddingTop="10dp"
            android:id="@+id/post_idea_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What kind of idea are you thinking?"/>

        <TextView
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/post_idea_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:hint="Give a description of your idea"/>

    </LinearLayout>

    <Button
        android:text="Post Idea"
        android:textAllCaps="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/postIdea"
        android:layout_width="match_parent"
        android:layout_height= "70dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-5dp"
        android:layout_marginRight="-7dp"
        android:layout_marginLeft="-7dp"
        android:background="#00bf20"/>

</FrameLayout>